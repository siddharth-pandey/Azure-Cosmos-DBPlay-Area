@model AzureCosmosPlayAreaMongoDb.Models.Course

@{
    ViewBag.Title = "Course";
}

<h2>Delete a Course</h2>

@using (Html.BeginForm("Delete", "Courses", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Title</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Modules</label>
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.Modules, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.Completed, new { disabled = "disabled" }) Completed?
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Delete</button>
                <a href="@Url.Action("Index")" class="btn btn-default">Back</a>
            </div>
        </div>
    </div>
}
